.cart-page {
	background: url(../img/template-cart.png) center top no-repeat;
	background: #EEF2F3;
	padding: 84px 0 0;
}
.cart-page .main-title {
	font-size: 54px;
	font-weight: 300;
	text-align: center;
	line-height: 60px;
	margin: 0 0 18px;
}
.cart-page .woocommerce table.shop_table {
	border: none;
	border-spacing: 0 26px;
}
.cart-page .woocommerce table.shop_table td.product-remove {
	width: 67px;
}
.cart-page .woocommerce table.shop_table td.product-remove a {
	position: relative;
	font-size: 30px;
	color: #7B8586 !important;
	right: -126px;
}
.cart-page .woocommerce table.shop_table td.product-price {
	font-weight: 600;
    font-size: 23px;
	text-align: right;
}
.cart-page .woocommerce table.shop_table td.product-quantity {
	    width: 90px;
}
.cart-page .woocommerce table.shop_table td.product-quantity .quantity .input-group.spinner {
	width: 100%;
	    border-spacing: 0;
}
.cart-page .woocommerce table.shop_table td.product-quantity .quantity .form-control {
    border: 1px solid #EEF2F3;
	display: block;
}
.cart-page .woocommerce table.shop_table td.product-name {
	line-height: 26px;
	width: 480px;
}
.cart-page .woocommerce table.shop_table td.product-name .title a {
	font-size: 18px;
	color: #7B8586;
	text-decoration: none;
    font-weight: 600;	
}
.cart-page .woocommerce table.shop_table td.product-name .brand a {
	width: 120px;
	color: #769769;
	font-size: 16px;
	text-decoration: none;
}
.cart-page .woocommerce table.shop_table td.product-name .brand {
	line-height: 33px;
}
.cart-page .woocommerce table.shop_table td.product-thumbnail {
	width: 120px;
}
.cart-page .woocommerce table.shop_table td.product-thumbnail img {
	width: 100%;
	height: auto;
}
.cart-page .woocommerce table.shop_table td {
	border-top: 2px solid transparent !important;
	border-bottom: 2px solid transparent !important;
	padding: 0;
	background: #fff;
}
.cart-page .woocommerce table.shop_table tr:hover td {
	border-top: 2px solid #C7E6E8 !important;
	border-bottom: 2px solid #C7E6E8 !important;
}

.cart-page .woocommerce table.shop_table tr td:first-child {
	border-left: 2px solid transparent !important;	
}
.cart-page .woocommerce table.shop_table tr td:last-child {
	border-right: 2px solid transparent !important;	
}
.cart-page .woocommerce table.shop_table tr:hover td:first-child {
	border-left: 2px solid #C7E6E8 !important;	
}
.cart-page .woocommerce table.shop_table tr:hover td:last-child {
	border-right: 2px solid #C7E6E8 !important;	
}
.cart-page .woocommerce .woocommerce-checkout-payment .btn {
	border-width: 2px;
    font-size: 25px;
    text-transform: uppercase;
    font-weight: 400;
    letter-spacing: 1.9px;
    height: 80px;
}

