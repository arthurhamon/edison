.about {
	//background: url(../img/template-about.png) center -200px no-repeat;
	padding: 0 0 60px;
}
.about .first-screen {
	padding-top: 158px;
}
.about .first-screen .main-title {
	margin-bottom: 58px;
}
.about .first-screen .content {
	line-height: 41px;
	margin-bottom: 106px;
}
.about .first-screen .content .excerpt {
	position: relative;
	font-size: 25px;
	font-style: italic;
	text-align: center;
	background: #F7F9FA;
	padding: 44px 0;
    margin: 30px 0 31px;
}
.about .first-screen .content .excerpt:before { 
	position: absolute;
    top: 14px;
    left: -54px;
    content: "\201c";
    font-family: georgia;
    font-style: italic;
    font-size: 200px;
    line-height: 200px;
    color: #C2D1BC;
}
.about .certificates { 
	background: #F7F9FA;
	padding: 63px 0 78px;
}
.about .certificates .main-title {
	text-align: center;
	margin-bottom: 91px;
}
.about .certificates .wrap-jcarousel .jcarousel {
	margin-bottom: 54px;
}

.about .certificates .wrap-jcarousel .control-panel .jcarousel-prev {
	display: inline-block;
	position: relative;
    top: -2px;
	@include left-arrow (2px, 16px, 16px, #CCD9DA);
	@include animation-transition (0.5s);
	@include cros-opacity (1);
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-prev:hover {
	@include cros-opacity (0.5);	
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-prev.inactive {
	@include cros-opacity (0);
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-next {
	display: inline-block;
	position: relative;
    top: -2px;
	@include right-arrow (2px, 16px, 16px, #CCD9DA);
	@include animation-transition (0.5s);
	@include cros-opacity (1);
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-next:hover {
	@include cros-opacity (0.5);	
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-next.inactive {
	@include cros-opacity (0);
}

.about .certificates .wrap-jcarousel .control-panel {
	text-align: center;
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-pagination {
	display: inline-block;
	line-height: 20px;
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-pagination a {
	display: inline-block;
	padding: 4px;
	border: 1px solid transparent;
	margin: 0 5px;
	@include border-radius (50%);
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-pagination a.active {
	border-color: #3B4444;
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-pagination a:before {
	content: '';
	display: block;
	width: 10px;
	height: 10px;
	background: #CCD9DA;
	@include border-radius (50%);
}
.about .certificates .wrap-jcarousel .control-panel .jcarousel-pagination a.active:before {
	background: #88C9CD;
}

.about .last-posts {
	padding-top: 63px;
}
.about .last-posts .main-title {
	text-align: center;
	margin-bottom: 61px;
}
.about .last-posts .title {
	font-size: 28px;
	font-weight: 300;
	color: #3B4444;
    line-height: 45px;
	margin-bottom: 13px;
}
.about .last-posts .img {
	margin-bottom: 26px;
}
.about .last-posts .img img {
	max-width: 100%;
}
.about .last-posts .where {
	font-size: 20px;
	font-weight: 600;
	color: #769769;
	margin-bottom: 22px;
}
.about .last-posts .text {
	line-height: 40px;
}
.about .last-posts .more {
    display: inline-block;
    width: 90px;
    height: 22px;
    background: url(../img/more.png) left top no-repeat;
    margin: 34px 0 0;
}
.about .last-posts .all-posts {
	    margin-top: 79px;
}
.about .last-posts .all-posts .btn {
	border-width: 2px;
    padding: 19px 36px;
    letter-spacing: 1.5px;
}


.about .summary .img {
	text-align: center;
}
.about .summary .img img {
	max-width: 100%;
}
.about .summary .bottom-part {
	background: #fff;
	margin: -170px 0 0;
    padding: 63px 0 0;
}
.about .summary .bottom-part .title {
	text-align: center;
	margin-bottom: 34px;
}
.about .summary .bottom-part .text {
	line-height: 40px;
	margin-bottom: 47px;
}
.about .summary .bottom-part .wrap-form .btn {
    border-width: 2px;
    font-weight: 400;
    padding: 19px 0;
    letter-spacing: 1.3px;
}